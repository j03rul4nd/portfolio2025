---
import BaseHead from '../components/BaseHead.astro';

import Hero from '../components/impact/hero.astro';
import Problem from '../components/impact/problem.astro';
import Solution from '../components/impact/solution.astro';
import Process from '../components/impact/process.astro';
import Cta from '../components/impact/cta.astro';
import FinalQuote from '../components/impact/FinalQuote.astro';
import Header from '../components/header_ui.astro'; 
import Footer from '../components/impact/footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
       .spline-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }
    .spline-background iframe {
      width: 100%;
      height: 100%;
      border: none;
      pointer-events: none;
    }
    </style>
	</head>
	<body  
  class="bg-black text-white antialiased min-h-screen flex flex-col overflow-x-hidden">
		    
    <!-- Spline 3D -->
  <div class="spline-background">
    <iframe src="https://my.spline.design/unchained-d3hHCgdWho7a8ATGzKtB11TU/" frameborder="0" width="100%" height="100%"></iframe>
  </div>
    
    <Header />
    <Hero />
    <Problem />
    <Solution />
    <Process />
    <Cta />
    <FinalQuote />

		<Footer />
	</body>
    
  <script type="module">
    lucide.createIcons();

    // Impact Chart
    const ctx = document.getElementById('impactChart').getContext('2d');
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: [
          'Industrial Automation',
          'SaaS Platforms',
          '3D Visualization',
          'Process Optimization',
          'Real-time Data'
        ],
        datasets: [{
          data: [30, 25, 18, 17, 10],
          backgroundColor: [
            'rgba(59,130,246,0.8)',   // blue-500
            'rgba(34,197,94,0.8)',    // green-500
            'rgba(168,85,247,0.8)',   // purple-500
            'rgba(251,191,36,0.8)',   // yellow-400
            'rgba(250,204,21,0.8)'    // yellow-300
          ],
          borderWidth: 2,
          borderColor: '#18181b',
        }]
      },
      options: {
        plugins: {
          legend: {
            labels: {
              color: '#e5e7eb',
              font: { family: 'Inter', size: 14, weight: 500 }
            }
          }
        },
        cutout: '72%',
      }
    });
  </script>
</html>

