      document.getElementById('energyValue').textContent = Math.round(smartCityData.energy.value) + 'kW';
      document.getElementById('iotValue').textContent = smartCityData.iot.value.toLocaleString();
    }

    // Initialize smart city map
    if (document.getElementById('smartCityMap')) {
      const maptilerKey = 'b2vaX1LpH0ZoVBCMrhNY';
      const longitud = 2.3522;
      const latitud = 48.8566;

      const smartCityMarkers = [
        { coordinates: [2.3522, 48.8566], type: 'data-center', color: '#06b6d4', title: 'Central Data Hub' },
        { coordinates: [2.2945, 48.8584], type: 'traffic-control', color: '#10b981', title: 'Traffic Management' },
        { coordinates: [2.3376, 48.8606], type: 'energy-grid', color: '#f59e0b', title: 'Smart Grid Node' },
        { coordinates: [2.3730, 48.8529], type: 'environmental', color: '#8b5cf6', title: 'Environmental Station' }
      ];

      try {
        const mapl3d = new maplibregl.Map({
          container: 'smartCityMap',
          style: `https://api.maptiler.com/maps/streets/style.json?key=${maptilerKey}`,
          center: [longitud, latitud],
          zoom: 13,
          bearing: -12,
          pitch: 45,
          interactive: true,
          attributionControl: false
        });

        mapl3d.on('load', () => {
          smartCityMarkers.forEach((markerData, index) => {
            const marker = new maplibregl.Marker({ 
              color: markerData.color,
              scale: 0.8
            })
              .setLngLat(markerData.coordinates)
              .addTo(mapl3d);

            setTimeout(() => {
              const element = marker.getElement();
              element.style.animation = 'pulse 3s infinite';
            }, index * 150);
          });
        });

        setInterval(updateSmartCityData, 2000);
      } catch (error) {
        console.error("Error initializing map:", error);
        document.getElementById('smartCityMap').innerHTML = '<div class="flex items-center justify-center h-full bg-neutral-800 text-neutral-400 text-center text-sm">Smart city simulation ready</div>';
