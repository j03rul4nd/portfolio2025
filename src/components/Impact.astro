    };

    function updateSmartCityData() {
      smartCityData.traffic.value += (Math.random() - 0.5) * 10;
      smartCityData.energy.value += (Math.random() - 0.5) * 50;
      smartCityData.iot.value += Math.floor((Math.random() - 0.5) * 20);

