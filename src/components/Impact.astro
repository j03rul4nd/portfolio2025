        width: canvas.clientWidth * 2,
        height: canvas.clientHeight * 2,
        phi: phi,
        theta: 0.3,
        dark: 1,
        diffuse: 1.5,
        scale: 1.0,
        mapSamples: 22000,
        mapBrightness: 7,
        baseColor: [0.12, 0.12, 0.30],
        markerColor: [0.6, 0.4, 1],
        glowColor: [0.12, 0.12, 0.30],
        offset: [0,0],
        markers: [
